{
  "name": "advanced-baseball-draft",
  "version": "1.0.0",
  "description": "ESPN-style fantasy baseball with advanced stats",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scrape": "node scraper/scraper.js",
    "init-db": "node database/init.js",
    "test-db": "node database/test.js",
    "build-css": "npx tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./public/output.css && npm rebuild sqlite3 && npm run init-db"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
